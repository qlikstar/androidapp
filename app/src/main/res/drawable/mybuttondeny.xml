<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E3650D" />
            <gradient android:angle="-90" android:startColor="#F44A0F" android:endColor="#F5A742"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E3650D" />
            <solid android:color="#F44A0F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F44A0F" />
            <gradient android:angle="-90" android:startColor="#F5A742" android:endColor="#E3650D" />
        </shape>
    </item>
</selector>