<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#75D660" />
            <gradient android:angle="-90" android:startColor="#5E7858" android:endColor="#5AA24A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#75D660" />
            <solid android:color="#5AA24A"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5E7858" />
            <gradient android:angle="-90" android:startColor="#75D660" android:endColor="#5AA24A" />
        </shape>
    </item>
</selector>